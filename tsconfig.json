{
  "compilerOptions": {
    // จัดโครงไฟล์
    "rootDir": "./src",
    "outDir": "./dist",

    // ใช้ CommonJS สำหรับ Node.js
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    // เอาท์พุต/ดีบัก
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // ความเข้มงวด
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,

    // ปรับให้ import ใช้งาน npm packages ได้ง่าย
    "esModuleInterop": true,

    // ลด warning และเพิ่มความเข้ากันได้
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
